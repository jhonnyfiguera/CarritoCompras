@model tp_nt1.Models.Compra

@{
    ViewData["Title"] = "Comprar";
}

<h4 class="text-center"><b>Nueva Compra</b></h4>
<br />

<div class="text-center">
    <i class="text-info">@ViewBag.MensajeSinStock</i>
</div>
<br />

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="text-success"><b>Estas a un paso de finalizar</b> </h4>
                <h6>Selecciona donde deseas retirar tus productos</h6>
                <hr />

                <form asp-action="CrearCompra" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label class="control-label"><b class="text-success">Sucursal</b></label>
                        <select name="sucursalId" class="form-control" asp-items="ViewBag.SucursalId"></select>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Continuar" class="btn btn-outline-primary" />
                        <button type="button" class="btn btn-outline-dark" onclick="history.back();">Volver</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}