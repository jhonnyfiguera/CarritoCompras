@model tp_nt1.Models.Compra

@{
    ViewData["Title"] = "Comprar";
}

<h4 class="text-center"><b>Nueva Compra</b></h4>
<br />

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">

                @*<div class="form-group text-center">

                </div>*@
                <h4 class="text-success"><b>Estas a un paso de finalizar</b> </h4>
                <h6>Selecciona donde deseas retirar tus produtos</h6>
                <hr />

                <form asp-action="CrearCompra" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <strong class="text-danger">@ViewBag.MensajeSinStock</strong>
                    </div>

                    <div class="form-group">
                        <strong class="text-success">@ViewBag.MensajeContinuarCompra</strong>
                    </div>

                    <div class="form-group">
                        <strong class="text-danger">@ViewBag.MensajeNohayStock</strong>
                    </div>

                    <div class="form-group">
                        <label class="control-label"><b class="text-success">Sucursal</b></label>
                        <select name="sucursalId" class="form-control" asp-items="ViewBag.SucursalId"></select>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Continuar" class="btn btn-outline-primary" />
                        <a class="btn btn-outline-info" asp-controller="CarritoItems" asp-action="MisItems">Volver</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}