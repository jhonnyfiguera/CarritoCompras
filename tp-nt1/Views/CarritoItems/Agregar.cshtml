@model tp_nt1.Models.CarritoItem

@{
    ViewData["Title"] = "Agregar";
}

<h4 class="text-center"><b>Estas agregando el Producto:</b></h4>
<br />

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">

                <div class="form-group">
                    <b>Nombre</b>:
                    <label class="control-label">@Model.Producto.Nombre</label>
                </div>

                <div class="form-group">
                    <b>Precio </b><small class="text-secondary">(por Kg)</small>:
                    <label class="control-label">$ @Model.Producto.PrecioVigente</label>
                </div>

                <form asp-action="Agregar" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" name="productoId" asp-for="@Model.Producto.Id" />

                    <div class="form-group">
                        <label class="control-label"><b class="text-success">Cantidad 
                            <small class="text-secondary">(por Kg)</small></b></label>
                        <input asp-for="Cantidad" class="form-control" />
                        <span asp-validation-for="Cantidad" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Agregar" class="btn btn-outline-primary" />
                        <button type="button" class="btn btn-outline-dark" onclick="history.back();">Volver</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}