@model tp_nt1.Models.CarritoItem

@{
    ViewData["Title"] = "Agregar";
}

<h3 class="text-center"><b>Agregar</b></h3>
<br />  

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">

                <h5>Estas agregando el siguiente Item:</h5>
                <br />

                <dl class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Producto.Nombre)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Producto.Nombre)
                    </dd>
                </dl>

                <dl class="row">
                    <dt class="col-sm-3">
                        Precio
                    </dt>
                    <dd class="col-sm-9">
                        $ @Html.DisplayFor(model => model.Producto.PrecioVigente)
                    </dd>
                </dl>

                <form asp-action="Agregar" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Cantidad" class="control-label"></label>
                        <input asp-for="Cantidad" class="form-control" />
                        <span asp-validation-for="Cantidad" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Agregar" class="btn btn-outline-primary" />
                        <a class="btn btn-outline-info" asp-controller="Productos" asp-action="Index">Volver</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}