@model tp_nt1.Models.Administrador

@{
    ViewData["Title"] = "Registrar";
}

<div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>Advertencia:</strong> Eres único administrador del sistema, puedes actualizar los datos.
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)">Actualizar Datos</a>
<hr />

<div>

    <h6 class="text-danger">Deseas registrar otro administrador? Tener en cuenta: </h6>

    <ul>
        <li>
            <p class=" text-danger"> Los datos se crean por default del sistema. </p>
        </li>
        <li>
            <p class=" text-danger"> Debes ingresar  Nombre de Usuario: " administrador " y la contraseña que coloques a continuación.</p>
        </li>
        <li>
            <p class=" text-danger"> Luego iniciar sesión para actualizar tus datos.</p>
        </li>
    </ul>
</div>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">

                <form asp-action="Create" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label for="password" class="control-label">Contraseña</label>
                        <input name="password" type="password" class="form-control" placeholder="Debe ser alfanumerica con al menos una letra mayuscula" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Registrar" class="btn btn-outline-primary" />
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

<div class="text-center">
    <br>
    <a class="btn btn-outline-info" asp-controller="Home" asp-action="Index">Inicio</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}