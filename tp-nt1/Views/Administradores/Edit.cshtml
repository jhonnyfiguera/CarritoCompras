@model tp_nt1.Models.Administrador

@{
    ViewData["Title"] = "Editar";
}

<h3 class="text-center">Actualizar</h3>
<hr />

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">

                <h5 class="card-title">Datos de la cuenta <label> @Model.Nombre</label> </h5>

                <form asp-action="Edit">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Nombre" />
                    <input type="hidden" asp-for="Apellido" />
                    <input type="hidden" asp-for="Telefono" />
                    <input type="hidden" asp-for="Direccion" />
                    <input type="hidden" asp-for="Email" />

                    <div class="form-group">
                        <label asp-for="Username" class="control-label"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="password" class="control-label">Password</label>
                        <input name="password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Actualizar" class="btn btn-primary" />
                        <a class="btn btn-danger" asp-action="Index" asp-controller="Home"> Cancelar </a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}