@{
    ViewData["Title"] = "Ingresar";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ingresar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="text-center">
                <h2>Ingresar al Carrito: Los Amigos</h2>
            </div>
            <br />  

            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="card">
                        <div class="card-body">

                            <form method="post" asp-action="Ingresar">

                                <div class="text-danger">
                                    @ViewBag.Error
                                </div>
                                <div class="form-group">
                                    <label laber-for="username" class="control-label">Nombre de usuario:</label>
                                    <input name="username" class="form-control" type="text" value="@ViewBag.Username" />
                                </div>
                                <div class="form-group">
                                    <label label-for="Password" class="control-label">Contraseña:</label>
                                    <input name="password" class="form-control" type="password" />
                                </div>
                                <div class="form-group ">
                                    <label label-for="rol">Seleccione un Rol:</label>
                                    <select name="rol" class="form-control" asp-items="ViewBag.Roles"></select>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Ingresar" class="btn btn-outline-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <div class="text-center">
        <a asp-Controller="Clientes" asp-action="Create">¿Aún no tienes una cuenta?  |  <b>Regístrate</b></a>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>