@model tp_nt1.Models.StockItem

@{
    ViewData["Title"] = "Editar";
}

<h4 class="text-center"><b>Editar Stock</b></h4>
<br />

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">

                <div class="form-group">
                    <b>Sucursal</b>:
                    <label class="control-label">@Model.Sucursal.Nombre</label>
                </div>

                <div class="form-group">
                    <b>Producto </b>:
                    <label class="control-label">@Model.Producto.Nombre</label>
                </div>

                <form asp-action="Edit">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <label asp-for="Cantidad" class="control-label"></label>
                        <input asp-for="Cantidad" class="form-control" />
                        <span asp-validation-for="Cantidad" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Actualizar" class="btn btn-outline-primary" />
                        <button type="button" class="btn btn-outline-dark" onclick="history.back();">Volver</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}